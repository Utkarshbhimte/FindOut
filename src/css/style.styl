// Import all partials
@require './_*.styl'

html, body
  width 100%
  max-width 100%
  height 100%
  max-height 100%
.contain-all
  height 100vh
  overflow hidden
header
  width 100%
  text-align center
  padding .8em 0
  h4
    margin: 0

nav
  display flex
  justify-content space-between
  padding 0
  span
    display: inline-block;
    float: none;
    width 100%
    text-align center
    color #c3c3c3
  input
    display: block;
    outline: none;
    width: 90vw;
    margin: 0 auto;
    border: none;
    border-bottom: #c3c3c3 1px solid;
    padding: .2em 1em;
    font-size .8em
    color: #000

.contacts-tab
  overflow-scrolling touch
  height 110px
  white-space nowrap
  width 100vw
  overflow-x scroll
  overflow-y hidden
  .small-dp
    background-color #c3c3c3
    border-radius: 50%
    margin 1em .5em
    width 70px
    height 70px
    display inline-block
    overflow hidden
    opacity .5
    transition .2s opacity ease-in-out
    background-position center top
    background-size cover
    background-repeat  no-repeat
    cursor pointer
    &.clicked
      opacity 1
    img
      height auto
      min-height 100%
      width 100%
  &::-webkit-scrollbar
    width 0
    display none
.preview-wrap
  position relative
  width 100%
  overflow hidden
  .preview
    height 71.5vh
    display: flex;
    justify-content: center;
    background-position center top
    background-size cover
    background-repeat no-repeat
    img
      height 100%
      width: auto
  .latest-message
    position absolute
    width 90vw
    margin 0 5vw
    bottom: 5vh
    background-color #FFF
    padding 1em 1.5em
    font-size 0.75em
    opacity .5
    .details
      width 69%
      h4
        margin 0
        font-size 1.4em
    .more
      width 30%
      height: 100%
      display block
      background-image url('/images/arrow.png')
