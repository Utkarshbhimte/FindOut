/*
  Possible Animations:
  enter
  leave
  appear Must set transitionAppear={true} on animation component
*/

.dp-enter
  transition all 3s ease-in-out
  transform translateX(-100%)
  opacity 1
  &.dp-enter-active
    transition all 3s ease-in-out
    transform translateX(0)
    opacity 0

